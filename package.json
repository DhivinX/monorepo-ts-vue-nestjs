{
  "name": "monorepo-vue-nestjs",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "workspaces": [
    "libs/utils",
    "libs/shared",
    "apps/*"
  ],
  "scripts": {
    "install": "npm run libs:build",
    "apps:dev": "concurrently \"npm run serve -w @monorepo-ts-vue-nestjs/web\" \"npm run serve -w @monorepo-ts-vue-nestjs/server\"",
    "libs:dev": "concurrently \"npm run lib:dev -w @monorepo-ts-vue-nestjs/utils\" \"npm run lib:dev -w @monorepo-ts-vue-nestjs/shared\"",
    "web:dev": "npm run serve -w @monorepo-ts-vue-nestjs/web",
    "server:dev": "npm run serve -w @monorepo-ts-vue-nestjs/server",
    "server:cli": "npm run cli -w @monorepo-ts-vue-nestjs/server",
    "libs:build": "npm run lib:build --workspaces --if-present",
    "build": "npm run lib:build --workspaces --if-present && npm run build --workspaces --if-present",
    "clean": "rimraf ./_dist && npm run lib:clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present && npm run lib:lint --workspaces --if-present"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@types/estree": "^0.0.51",
    "@rushstack/eslint-patch": "^1.1.0",
    "@types/node": "^16.11.27",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "concurrently": "^7.2.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "pkg": "^5.6.0",
    "rimraf": "3.0.2",
    "copyfiles": "2.4.1",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "tslib": "^2.4.0",
    "typescript": "~4.6.3"
  }
}
